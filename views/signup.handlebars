<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-dark">Sign Up:</h2>
            <form class="rounded bg-info">
                <div class="form-group">
                    <label for="username-signup" class="text-light form-text">Enter your username here</label>
                    <input type="text" class="form-control big-button" id="username-signup" placeholder="Enter username">
                </div>
                <div class="form-group">
                    <label for="password-signup" class="text-light form-text">Enter your password here</label>
                    <input type="password" class="form-control big-button" id="password-signup" placeholder="Enter password">
                </div>
                <button class="btn btn-warning btn-lg big-button" type="submit" id="signup-button">Sign Up</button>
            </form>
        </div>
    </div>
</div>

<script src="./js/sign-in.js"></script>