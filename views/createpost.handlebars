<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-dark mt-2">Submit a Post:</h2>
            <form class="rounded bg-info">
                <div class="form-group my-1">
                    <label for="post-title" class="text-light form-text">Enter the title of your post here</label>
                    <input type="text" class="form-control big-button" id="post-title" placeholder="Enter title">
                </div>
                <div class="form-group my-1">
                    <label for="post-contents" class="text-light form-text">Enter the description of your post here</label>
                    <textarea type="text" class="form-control big-button" id="post-contents" placeholder="Enter contents">
                </div>
                <button class="btn btn-warning big-button btn-lg my-2" type="submit">Submit your post</button>
            </form>
        </div>
    </div>
</div>

<script src="./js/posts"></script>