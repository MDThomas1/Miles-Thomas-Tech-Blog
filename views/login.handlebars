<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-dark">Login:</h2>
            <form class="rounded bg-info">
                <div class="form-group">
                    <label for="username-login" class="text-light">Enter your username here</label>
                    <input type="text" class="form-control" id="username-login" placeholder="Enter username">
                </div>
                <div class="form-group">
                    <label for="post-title" class="text-light">Enter your password here</label>
                    <input type="password" class="form-control" id="password-login" placeholder="Enter password">
                </div>
                <button class="btn btn-warning big-button" type="submit" id="login-button">Login</button>
                <a href="/signup" class="text-light text-center">New to Tech Blog? Follow this link to sign up!</a>
            </form>

        </div>
    </div>
</div>

<script src="./js/sign-in.js"></script>