<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-dark mt-2">Login:</h2>
            <form class="rounded bg-info">
                <div class="form-group my-1">
                    <label for="username-login" class="text-light form-text">Enter your username here</label>
                    <input type="text" class="form-control big-button" id="username-login" placeholder="Enter username">
                </div>
                <div class="form-group my-1">
                    <label for="post-title" class="text-light form-text">Enter your password here</label>
                    <input type="password" class="form-control big-button" id="password-login" placeholder="Enter password">
                </div>
                <button class="btn btn-warning btn-lg big-button my-2" type="submit" id="login-button">Login</button>
                <a href="/signup" class="text-light text-center mb-1"><p>New to Tech Blog? Follow this link to sign up!</p></a>
            </form>

        </div>
    </div>
</div>

<script src="./js/sign-in.js"></script>